             <div class="pageheader">
              <h1>HSN Summary For Purchase Bill</h1>
              <div class="breadcrumb-wrapper hidden-xs">
                <span class="label">You are here:</span>
                <ol class="breadcrumb">
                  <li><a href="/">Dashboard</a>
                  </li>
                  <li>Tables</li>
                  <li class="active">HSN Summary For Purchase Bill</li>
                </ol>
              </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
              <div class="row">
                <div class="col-md-12">
                  <div class=" panel panel-info">
                    <div class="panel-heading">
                      <h3 class="panel-title">HSN Summary For Purchase Bill</h3>
                      <div class="actions pull-right">
                       <i class="fa fa-expand"></i>
                       <i class="fa fa-chevron-down"></i>
                       <i class="fa fa-times"></i>
                     </div>
                   </div>
                   <div class="panel-body">
                   <div class="pull-right">
                      <font color="blue">Download:</font>
                    <%= link_to "CSV", hsn_summary_for_purchase_bills_path(format: "csv"), class: 'btn btn-success' %> |
                    <%= link_to "Excel", hsn_summary_for_purchase_bills_path(format: "xls"), class: 'btn btn-success' %>
                    <%#=link_to("Export Database to Excel", export_invoices_path)  %>

                    </div>
                    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                        <th>SR No</th>
                         <th>HSN</th>
                         <th> Description</th>
                         <th> UQC </th>
                         <th> Total Quantity </th>
                         <th> Total Value </th>
                         <th> Taxable Value </th>
                         <th> Central Tax Amount </th>
                         <th> State/UT Tax Amount</th>
                         <th> Integrated Tax Amount </th>
                        
                        </tr>
                      </thead>

                      <tbody>
                       <% @hsn_summaries.each_with_index do |a,i| %>
                        <tr>
                          <td><%=i+1%></td>
                          <td><%= a.hsn_no %></td>
                          <td><%=a.description %></td>
                          <td><%=a.uqc%></td>
                          <td><%=a.total_quantity%></td>
                          <td><%=a.total_value%></td>
                          <td><%=a.taxable_value%></td>
                          <td><%=a.cgst%></td>
                          <td><%=a.sgst%></td>
                          <td><%=a.igst%></td>
                         
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>


        <% content_for :javascript do %>
        <!--Load these page level functions-->
        <script>
          $(document).ready(function() {
           $('#example').dataTable();
         });
       </script>
       <% end %>