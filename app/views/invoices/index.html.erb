        <section class="main-content-wrapper">
          <!-- Main content view  -->
          <div class="pageheader">
            <h1>Regular Invoices</h1>
            <div class="breadcrumb-wrapper hidden-xs">
              <span class="label">You are here:</span>
              <ol class="breadcrumb">
                <li><a href="/">Dashboard</a>
                </li>
                <li>Tables</li>
                <li class="active">View Invoices</li>
              </ol>
            </div>
          </div>
          <section id="main-content" class="animated fadeInUp">
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Regular Invoices</h3>
                    <div class="actions pull-right">
                     <i class="fa fa-expand"></i>
                     <i class="fa fa-chevron-down"></i>
                     <i class="fa fa-times"></i>
                   </div>
                 </div>
                 <div class="panel-body">
                  <%= link_to 'Add Invoices', new_invoice_path, class: 'btn btn-primary' %>
                  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                      <thead>
                        <tr>
                          <th>Invoice Number</th>
                          <th>Date of Invoice</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @invoices.each_with_index do |a,i| %>
                        <tr>
                          <td><%=i+1%></td>
                          <td><%=a.invoice_no %></td>
                          <td><%=a.date %></td>
                          <td><%= link_to 'View Invoice', invoice_path(a)%></td>
                          <td><%= link_to 'Destroy',invoice_path(a), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <br>