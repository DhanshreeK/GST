             <div class="pageheader">
              <h1>Receipt Voucher</h1>
              <div class="breadcrumb-wrapper hidden-xs">
                <span class="label">You are here:</span>
                <ol class="breadcrumb">
                  <li><a href="/">Dashboard</a>
                  </li>
                  <li>Tables</li>
                  <li class="active">Receipt Voucher</li>
                </ol>
              </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
              <div class="row">
                <div class="col-md-12">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">Receipt Voucher</h3>
                      <div class="actions pull-right">
                       <i class="fa fa-expand"></i>
                       <i class="fa fa-chevron-down"></i>
                       <i class="fa fa-times"></i>
                     </div>
                   </div>
                   <div class="panel-body">
                    <%= link_to 'Add Receipt Voucher', new_receipt_voucher_path, class: 'btn btn-primary' %>
                    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>SR NO</th>
                          <th>Voucher Number</th>
                          <th>Date of Voucher</th>
                          <th>Action</th>
                        </tr>
                      </thead>

                      <tbody>
                       <% @receipt_vouchers.each_with_index do |a,i| %>
                       <tr>
                        <td><%=i+1%></td>
                        <td><%=link_to a.voucher_no, receipt_voucher_path(a), class: 'btn btn-link'%></td>
                        <td><%=a.date %></td>
                        
                        <td><%= link_to 'Destroy',receipt_voucher_path(a), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-link'%></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>

                </div>
              </div>
            </div>
          </div>
        </section>


        <% content_for :javascript do %>
        <!--Load these page level functions-->
        <script>
          $(document).ready(function() {
           $('#example').dataTable();
         });
       </script>
       <% end %>