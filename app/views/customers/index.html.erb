             <div class="pageheader">
                <h1>Customer Details</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">You are here:</span>
                    <ol class="breadcrumb">
                        <li><a href="/">Dashboard</a>
                        </li>
                        <li>Tables</li>
                        <li class="active">Customer Details</li>
                    </ol>
                </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Customers</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                              <%= link_to 'Add Customer', new_customer_path, class: 'btn btn-primary' %>

                            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                             <th>Sr.No</th>
                                    <th>Customer name</th>
                                    <th>Gstin no reg</th>
                                    <th>Customer Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                     
                            <tbody>
                             <% @customers.each_with_index do |customer,i| %>
                                    <tr>
                                      <td><%= i + 1 %></td>
                                      <td><%= link_to customer.customer_name, customer, class: 'btn btn-link' %></td>
                                      <td><%= customer.gstin_no_reg %></td>
                                      <td><%= customer.customer_type %></td>
                                       <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-link' %></td>
                                   </tr>

                                 <% end %>
                            </tbody>
                        </table>

                       </div>
                     </div>
                </div>
            </div>
              </section>


            <% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>