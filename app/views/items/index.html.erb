             <div class="pageheader">
                <h1>Item Details</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">You are here:</span>
                    <ol class="breadcrumb">
                        <li><a href="/">Dashboard</a>
                        </li>
                        <li>Tables</li>
                        <li class="active">Items</li>
                    </ol>
                </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Item Details</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                            <%= link_to 'New Item', new_item_path, {:remote => true, :class => "btn btn-primary", 'data-target' => "#exampleModalCenter", 'data-toggle' => "modal"} %> | <%= link_to 'Add Unit of Measure', new_unit_of_measure_path, class: 'btn btn-success' %>

                            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                             <th>Sr.No</th>
                              <th>Item Description</th>
                              <th>Item hsn no</th>
                              <th>Item Code</th>
                              <th>Edit</th>
                              <th>Action</th>
                                </tr>
                            </thead>
                     
                            <tbody>
                             <% @items.each_with_index do |item,i| %>
                                <tr>
                                  <td><%=i+1 %></td>
                                  <td><%= link_to item.dogns, item, class: 'btn btn-link' %></td>
                                  <td><%= item.item_hsn_no %></td>
                                  <td><%= item.item_code %></td>
                                  <td><%= link_to 'Edit', item,class: 'btn btn-link' %></td>
                                  <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-link' %></td>                                </tr>
                                 <% end %>
                            </tbody>
                        </table>

                       </div>
                     </div>
                </div>
            </div>
              </section>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
 
                <%= render '/items/form', modal: true %>
                

      </div>
      

            <% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>



