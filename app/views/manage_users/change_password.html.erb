<div class="pageheader">
            <h1>Change Password</h1>
            <div class="breadcrumb-wrapper hidden-xs">
                <span class="label">You are here:</span>
                <ol class="breadcrumb">
                    <li><a href="/">Dashboard</a>
                    </li>
                    <li>Forms</li>
                    <li class="active">Change Password</li>
                </ol>
            </div>
        </div>

<section id="main-content" class="animated fadeInUp">
<div class="row">
<div class="col-md-12">
  <div class="panel panel-info">
      <div class="panel-heading">
          <h3 class="panel-title">Change Password</h3>
          <div class="actions pull-right">
           <i class="fa fa-expand"></i>
              <i class="fa fa-chevron-down"></i>
              <i class="fa fa-times"></i>
          </div>
      </div>
   <div class="panel-body">
              <%=link_to 'Edit Email', edit_manage_user_path(@user), class: 'btn btn-primary'%>
   <p>
    <b> Role:</b>
          <%= @user.role %>
    </p>
          <br>
            
    <p><b> Email:</b>
          <%= @user.email %>
   </p>
<%= form_for @user,url:{action: 'update_password', controller: 'manage_users',id: @user.id},method: :patch do |f| %>   
 <div class="form-group">
    <div class="col-sm-3">
      <label class="col-sm-10 control-label">New Password</label>   
     <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder:'New Password',class: "form-control" %>
    </div>
  </div>
 <div class="form-group">
    <div class="col-sm-3">
      <label class="col-sm-20 control-label">Confirm New Password</label>   
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:'Confirm New Password',class: "form-control" %>
    </div>
  </div>
  <br>
  <div class="row">
              <div class="col-md-offset-3 col-md-9">
        <%= f.submit "Update",class: "btn btn-success" %>
      </div>
    </div>
  <% end  %>