                          <%=@credit_debit_note.date_of_original_invoice%></p><br>
                        </div>
                        
                      </div>  
                    </div>  
                    <table class="table table-condensed table-bordered" style="margin-top: -15px; margin-bottom: 15px;">
                      <thead>
                        <tr>
                          <th style="font-size: 16px; background-color: #ccc; width: 75px;" colspan="11"><center><%= raw "#{@credit_debit_note.note_type}" if @credit_debit_note.present?%></center></th>
                        </tr>

                        <th>Sr No</th>
                        <th>Item Description</th>
                        <th>HSN/SAC</th>
                        <th>UOM</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Net Amount</th>
                        <th>Tax Rate</th>
                        <th>Tax Type</th>
                        <th>Tax Amount</th>
                        <th>Total Amount</th>
                      </tr>
                      <%tax_amt = 0%>
                      <%total_amt = 0%>

                      <% @credit_debit_note.credit_debit_note_items.each_with_index do |i,n|%>
                      <tr>
                        <td><%= n + 1 %></td>
                        <td><%= i.item.dogns%></td>
                        <td><%= i.item.item_hsn_no%></td>
                        <td><%= i.item.unit_of_measure.name%></td>
                        <td>&#8377;<%= i.unit_price%></td>
                        <td><%= i.quantity%></td>
                        <td>&#8377;<%= i.net_amt%></td>
                        <td><%= i.tax_rate%>&#37;</td>
                        <td>CGST+SGST</td>
                        <td>&#8377;<%= i.tax_amt%></td>
                        <td align="right">&#8377;<%= i.total_amt%></td>
                      </tr>
                      <% tax_amt += i.tax_amt.to_f%>
                      <%total_amt += i.total_amt.to_f%>
